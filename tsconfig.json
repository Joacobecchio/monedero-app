{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [
      "react",
      "react-native"
    ]
  },
  "include": [
    "app",
    "src",
    "metro.config.js",
    "**/*.ts",
    "**/*.tsx"
  ]
}
